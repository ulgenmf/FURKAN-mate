// schema.prisma
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Chat {
  id        String   @id
  title     String
  createdAt DateTime @default(now())
  modelId   String
  settings  Json
  path      String
  sharePath String?
  messages  Json
  model     Json
}

